// 整体布局
.layout
  display flex
  flex-direction column
  min-height 100%
  border 1px solid #d7dde4
  background #f5f7f9
.layout-header
  .logo
    line-height 30px
    font-size 16px
    color #fff
    float left
    position relative
    top 15px
    left 20px
  .nav
    float right
  .btn-login, .btn-register, .btn-user
    color rgba(255,255,255,.7)
  .tip-text
    text-align right
  .ivu-btn-text
    color #999
.layout-content
  flex 1
  margin 15px
  padding-bottom 20px
  overflow hidden
  background #fff
  border-radius 4px
// 内容标题
.mod-header
  display flex
  align-items center
  justify-content space-between
  height 60px
// 翻页
.mod-pagination
  margin 30px 0
  text-align right
// 文章标签输入框
.tag-input
  width 100px
// Alert组件
.mod-alert
  margin-top 10px
// 隐藏行
.ivu-table .table-hide-row td
  background-color #f8f8f9